<resources>

    <!-- Base application theme. -->
    <style name="Theme.Spectre" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/catamaran</item>
        <item name="snackbarStyle">@style/Spectre.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Spectre.Snackbar.Button</item>
    </style>

    <style name="Spectre.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="Spectre.Snackbar.Button" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="Spectre.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="helperTextTextColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/box_input_state_list</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:state_focused">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Spectre.Button.OutlinedBox" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="backgroundTint">@color/outlined_btn_state_list</item>
        <item name="iconPadding">5dp</item>
        <item name="iconTint">@color/outlined_btn_icon_list</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="fontFamily">@font/catamaran_bold</item>
        <item name="android:textColor">@color/outlined_btn_txt_list</item>
        <item name="elevation">2dp</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_error_red_24dp</item>
        <item name="errorTextColor">@color/colorError</item>
    </style>

    <style name="Spectre.Chips.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="fontFamily">@font/catamaran_bold</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipStrokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="chipSurfaceColor">@color/iris_purple</item>
        <item name="chipBackgroundColor">@color/outlined_btn_state_list</item>
        <item name="android:textColor">@color/outlined_btn_txt_list</item>
        <item name="chipIconTint">@color/box_input_state_list</item>
        <item name="rippleColor">@color/iris_purple</item>
        <item name="checkedIcon">@drawable/ic_check_white_24dp</item>
        <item name="android:checkable">true</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
    </style>

    <style name="Spectre.Login.Headings" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/catamaran_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
